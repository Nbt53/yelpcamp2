<% layout('layouts/boilerplate') %>

<!-- //cluster map -->

<div id="cluster-map"></div>
<div class="container">
    <h1> All Campgrounds</h1>

    <% for(let campground of campgrounds) {%>
        <div class="card mb-3 ">
        <div class="row">
            <div class="col-md-4">
                <% if(campground.image.length){ %> 
                <img src="<%= campground.image[0].url%>" alt="" class="img-fluid">
                <% }else{ %> 
                    <img src="https://res.cloudinary.com/djj2nhj8d/image/upload/v1670015214/YelpCamp/zshtmbowhix1ihrmytfu.png" alt="" class="img-fluid">
                    <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body"></div>
                <h5>
                    <div class="card-title">
                        <%= campground.title %>
                    </div>
                    <div class="card-text">
                        <%= campground.description %>
                    </div>
                    <p class="card-text"><small class="text-muted">
                            <%= campground.location %>
                        </small>
                    </p>

                    <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %>
                    </a>
                    </div>

                </h5>
            </div>
        </div>


        <% } %></div>
        <script>
            const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
            const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
        </script>
        <script src="/js/clusterMap.js" ></script>
 